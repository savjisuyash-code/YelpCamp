<%- include("../partials/header") %>

    <div class = "container">
        <h1 style = "text-align : center">EDIT <%= campground.name.toUpperCase() %></h1>
        <div style = "width:30%; margin:25px auto">
            <form action  = "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST" enctype="multipart/form-data">
              
              <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name = "campground[name]" aria-describedby="emailHelp" value="<%= campground.name%>" >
              </div>
              
              <div class="form-group">
                <label>Price(Rs)/night</label>
                <input type="number" class="form-control" name = "campground[price]" aria-describedby="emailHelp" value="<%= campground.price %>" min="10" step="10"> 
              </div>
              
              <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
              
               <div class="form-group">
                <label >Description</label>
                <textarea id="txtarea" type="text" class="form-control" name = "campground[description]" ><%= campground.description%></textarea>
                
              </div>
             
              <button type="submit" class="btn btn-primary" style = "margin: 10px auto">Submit</button>
            </form>
            <a href = "/campgrounds">Go back</a>
        
    </div>






<%- include("../partials/footer") %>